# Dockerfile.web - Frontend build for Render deployment
# Use from repository root (not client/ subdirectory)

# Stage 1: Build frontend
FROM node:20-alpine AS build
WORKDIR /app

# Copy package files from root (including patches for pnpm)
COPY package.json pnpm-lock.yaml ./
COPY patches ./patches

# Enable pnpm and install dependencies
RUN corepack enable && pnpm install --no-frozen-lockfile

# Copy source files
COPY client ./client
COPY shared ./shared
COPY vite.config.ts ./
COPY tsconfig.json ./
COPY components.json ./

# Build the frontend only (skip server build)
RUN pnpm vite build

# Stage 2: Nginx + template + entrypoint
FROM nginx:1.25-alpine
WORKDIR /app

# Copy built frontend (Vite outputs to dist/public per vite.config.ts)
COPY --from=build /app/dist/public /usr/share/nginx/html

# Copy nginx template and entrypoint from client folder
COPY client/nginx.conf.template /etc/nginx/conf.d/default.conf.template
COPY client/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

EXPOSE 80
CMD ["/entrypoint.sh"]
